<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="SimpleTaskBerDimmer" Height="100" Width="800" Background="Black"
        Icon="/resources/Office_-30_icon-icons.com_73979.png">
    <Grid Background="Black" Margin="10,10,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="397*"/>
            <ColumnDefinition Width="28*"/>
            <ColumnDefinition Width="179*"/>
            <ColumnDefinition Width="46*"/>
            <ColumnDefinition Width="27*"/>
            <ColumnDefinition Width="113*"/>
        </Grid.ColumnDefinitions>
        <!-- TextBlockをSliderの近くに配置 -->
        <TextBlock x:Name="sliderValueText" Foreground="White" FontSize="20" 
                   HorizontalAlignment="Left" VerticalAlignment="Center"
                   Margin="16,0,0,0" Text="90" Grid.Column="3"/>

        <!-- Sliderの位置を調整 -->
        <Slider x:Name="brightnessSlider" Width="600" 
                HorizontalAlignment="Left" VerticalAlignment="Center"
                Margin="10,0,0,0" ValueChanged="Slider_ValueChanged" 
                Maximum="100" Value="90" Grid.ColumnSpan="4"/>
    </Grid>
</Window>
